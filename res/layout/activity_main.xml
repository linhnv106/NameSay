    <Button
        android:id="@+id/btn_menu2"
        style="@style/DashboardButton"
        android:drawableTop="@drawable/ic_launcher"
        android:text="News Feed" />

    <Button
        android:id="@+id/btn_menu3"
        style="@style/DashboardButton"
        android:drawableTop="@drawable/ic_launcher"
        android:text="News Feed" />

    <Button
        android:id="@+id/btn_menu4"
        style="@style/DashboardButton"
        android:drawableTop="@drawable/ic_launcher"
        android:text="News Feed" />

</com.mkapp.apps.name.ui.DashboardLayout>